{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Allow",
      "Action": [
        "ssm:PutParameter",
        "ssm:GetParameter",
        "ssm:GetParameters",
        "ssm:GetParametersByPath",
        "ssm:DeleteParameter",
        "ssm:DescribeParameters"
      ],
      "Resource": [
        "arn:aws:ssm:ap-south-1:*:parameter/dev/health-app/*",
        "arn:aws:ssm:ap-south-1:*:parameter/test/health-app/*",
        "arn:aws:ssm:ap-south-1:*:parameter/prod/health-app/*"
      ]
    },
    {
      "Effect": "Allow",
      "Action": [
        "kms:Decrypt",
        "kms:DescribeKey"
      ],
      "Resource": "arn:aws:kms:ap-south-1:*:key/*",
      "Condition": {
        "StringEquals": {
          "kms:ViaService": "ssm.ap-south-1.amazonaws.com"
        }
      }
    }
  ]
}